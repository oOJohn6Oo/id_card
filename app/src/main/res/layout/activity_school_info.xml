<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_collage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/school_label"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintStart_toStartOf="parent" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toEndOf="@id/tv_collage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_major"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/major_label"
            app:layout_constraintBottom_toBottomOf="@id/et_major"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_major"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/tv_major"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/stu_class_label"
            app:layout_constraintBottom_toBottomOf="@id/et_class"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_class"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/tv_class"
            app:layout_constraintTop_toBottomOf="@+id/tv_major" />

        <Button
            android:id="@+id/btn_next_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/next_button"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>